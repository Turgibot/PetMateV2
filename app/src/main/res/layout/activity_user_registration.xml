<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainLight"
    tools:context=".UserRegistrationActivity"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/lastNameView"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/empty_edit"
        android:hint="@string/last_name"
        android:inputType="text"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingStart="8sp"
        android:paddingTop="8sp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/phoneView"
        app:layout_constraintEnd_toEndOf="@+id/phoneView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/phoneView"
        app:layout_constraintTop_toBottomOf="@+id/firstNameView" />

    <EditText
        android:id="@+id/emailView"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/email"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:paddingEnd="60sp"
        android:paddingLeft="60sp"
        android:paddingRight="60sp"
        android:paddingStart="60sp"
        android:paddingTop="8sp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/passView"
        app:layout_constraintEnd_toEndOf="@+id/passView"
        app:layout_constraintStart_toStartOf="@+id/passView"
        app:layout_constraintTop_toBottomOf="@+id/phoneView" />

    <EditText
        android:id="@+id/phoneView"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/phone"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:paddingEnd="60sp"
        android:paddingLeft="60sp"
        android:paddingRight="60sp"
        android:paddingStart="60sp"
        android:paddingTop="8sp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/emailView"
        app:layout_constraintEnd_toEndOf="@+id/emailView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/emailView"
        app:layout_constraintTop_toBottomOf="@+id/lastNameView" />

    <EditText
        android:id="@+id/passView"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/pwd_edit"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingEnd="60sp"
        android:paddingLeft="60sp"
        android:paddingRight="60sp"
        android:paddingStart="60sp"
        android:paddingTop="8sp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/passRepeatView"
        app:layout_constraintEnd_toEndOf="@+id/passRepeatView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/passRepeatView"
        app:layout_constraintTop_toBottomOf="@+id/emailView" />

    <EditText
        android:id="@+id/passRepeatView"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/pwd_edit"
        android:hint="@string/repeat_password"
        android:inputType="textPassword"
        android:paddingEnd="60sp"
        android:paddingLeft="60sp"
        android:paddingRight="60sp"
        android:paddingStart="60sp"
        android:paddingTop="8sp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/startUseBtn"
        app:layout_constraintEnd_toEndOf="@+id/startUseBtn"
        app:layout_constraintStart_toStartOf="@+id/startUseBtn"
        app:layout_constraintTop_toBottomOf="@+id/passView" />

    <EditText
        android:id="@+id/firstNameView"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/empty_edit"
        android:hint="@string/first_name"
        android:inputType="text"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingStart="8sp"
        android:paddingTop="8sp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lastNameView"
        app:layout_constraintEnd_toEndOf="@+id/lastNameView"
        app:layout_constraintStart_toStartOf="@+id/lastNameView"
        app:layout_constraintTop_toBottomOf="@+id/imageView19" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/startusing"
        app:layout_constraintBottom_toTopOf="@+id/firstNameView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/create_a_new_account" />

    <Button
        android:id="@+id/startUseBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/start_account_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passRepeatView" />
</android.support.constraint.ConstraintLayout>